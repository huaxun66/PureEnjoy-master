<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_height_200dp" />

    <RelativeLayout
        android:id="@+id/single_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_height_200dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/public_height_200dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/public_height_30dp"
            android:layout_alignParentBottom="true"
            android:background="@color/public_black_transparency_150">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/public_mar_left_10dp"
                android:textColor="@color/public_white"
                android:textSize="@dimen/public_font_16sp"
                tools:text="王凯的微笑太迷人" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>