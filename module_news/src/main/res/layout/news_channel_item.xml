<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/public_height_50dp"
    android:paddingTop="@dimen/public_pad_top_5dp">

    <RelativeLayout
        android:layout_width="@dimen/public_width_110dp"
        android:layout_height="@dimen/public_height_40dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="@dimen/public_width_100dp"
            android:layout_height="@dimen/public_height_30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/public_mar_left_10dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/news_shape_round_white_bg"
            android:gravity="center"
            android:textColor="@color/news_channel_color_item"
            android:textSize="@dimen/public_font_12sp"
            tools:text="名称" />

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="@dimen/public_width_15dp"
            android:layout_height="@dimen/public_height_15dp"
            android:layout_alignStart="@+id/tv_name"
            android:layout_alignTop="@+id/tv_name"
            android:layout_marginStart="@dimen/public_mar_left_minus_5dp"
            android:layout_marginTop="@dimen/public_mar_top_minus_5dp"
            android:src="@drawable/news_ic_delete" />
    </RelativeLayout>


</RelativeLayout>