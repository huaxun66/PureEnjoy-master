<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sheet_content_swipe_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/public_height_60dp"
    android:background="@drawable/public_selector_layout"
    android:clickable="true"
    android:orientation="vertical"
    app:swipeEnable="true">

    <LinearLayout
        android:id="@+id/sheet_content_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/public_selector_layout"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sheet_cover_iv"
            android:layout_width="@dimen/public_width_40dp"
            android:layout_height="@dimen/public_height_40dp"
            android:layout_marginStart="@dimen/public_mar_left_5dp"
            android:src="@drawable/music_my_sheet" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/public_mar_left_10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sheet_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="bottom"
                android:maxLines="1"
                android:text="@string/music_my_sheet"
                android:textSize="@dimen/public_font_15sp" />

            <TextView
                android:id="@+id/sheet_music_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="top"
                android:maxLines="1"
                android:text="@string/music_sheet_song_num"
                android:textColor="@color/public_grey_700"
                android:textSize="@dimen/public_font_12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/public_height_0_5dp"
                android:background="@color/public_common_touch_bg" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/sheet_swipe_delete_menu_btn"
        android:layout_width="@dimen/public_width_60dp"
        android:layout_height="match_parent"
        android:background="@color/music_theme"
        android:gravity="center"
        android:text="@string/str_delete"
        android:textColor="@color/public_white" />
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>