<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/public_width_200dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/public_padding_15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/public_mar_left_5dp"
        android:text="@string/music_confirm_delete"
        android:textSize="@dimen/public_font_20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/public_mar_top_20dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/dialog_delete_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/music_delete_song_file"
            android:textSize="@dimen/public_font_14sp" />
    </LinearLayout>
</LinearLayout>