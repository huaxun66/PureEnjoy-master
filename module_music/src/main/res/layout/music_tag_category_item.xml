<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/public_height_80dp"
    android:background="@drawable/music_sheet_tag_bg_normal">

    <ImageView
        android:id="@+id/category_img"
        android:layout_width="@dimen/public_width_24dp"
        android:layout_height="@dimen/public_height_24dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/public_mar_top_20dp"/>

    <TextView
        android:id="@+id/category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category_img"
        android:layout_marginTop="@dimen/public_mar_top_5dp"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/public_font_13sp"
        android:textColor="@color/public_custom_color_text_sub"
        tools:text="category" />

</RelativeLayout>