<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/public_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_height_50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/public_topbar_click_selector"
                android:paddingEnd="@dimen/public_pad_right_14dp"
                android:paddingStart="@dimen/public_pad_left_14dp"
                android:src="@drawable/public_nav_back"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_left_second"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/public_topbar_click_selector"
                android:paddingEnd="@dimen/public_pad_right_14dp"
                android:paddingStart="@dimen/public_pad_left_14dp"
                android:src="@drawable/public_nav_close"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/public_topbar_click_selector"
                android:gravity="center"
                android:paddingEnd="@dimen/public_pad_right_14dp"
                android:paddingStart="@dimen/public_pad_left_14dp"
                android:textColor="@color/public_tab_text_color_selected"
                android:textSize="@dimen/public_font_14sp"
                tools:text="@string/str_sure"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="@dimen/public_width_180dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/public_black"
            android:textSize="@dimen/public_font_16sp"
            tools:text="TitleCenter" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_right_third"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingEnd="@dimen/public_pad_right_14dp"
                android:paddingStart="@dimen/public_pad_left_14dp"
                android:src="@drawable/public_nav_search"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_right_second"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingEnd="@dimen/public_pad_right_14dp"
                android:paddingStart="@dimen/public_pad_left_14dp"
                android:src="@drawable/public_nav_add"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/public_topbar_click_selector"
                android:gravity="center"
                android:paddingEnd="@dimen/public_pad_right_14dp"
                android:paddingStart="@dimen/public_pad_left_14dp"
                android:textColor="@color/public_tab_text_color_selected"
                android:textSize="@dimen/public_font_14sp"
                android:visibility="gone"
                tools:text="@string/str_cancel" />

            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/public_topbar_click_selector"
                android:paddingEnd="@dimen/public_pad_right_14dp"
                android:paddingStart="@dimen/public_pad_left_14dp"
                android:src="@drawable/public_nav_more"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/line_view_topbar"
        style="@style/public_style_cutline"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
